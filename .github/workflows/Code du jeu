import pygame
from button2 import Button   #importation du class bouton

pygame.init()

#######

#mise en forme du jeu

#######

longueur, largeur = 800, 600
pygame.display.set_caption("Oratosh's world")
screen = pygame.display.set_mode((longueur, largeur))
background = pygame.image.load("Background.png")


########
                            
#mise en place du background
                            
########



#mise en place de class bouton 
button_surface = pygame.image.load("bouton1.png")
button_surface = pygame.transform.scale(button_surface, (300, 150))
button = Button(button_surface, 400, 450, "PLAY")  


#####################

# Menu du jeu

######################

def accueil():
    running = True
    while running:
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                running = False

        
        screen.fill((0,0,0))           #écran noir
        surface.blit(background)
        button.changeColor()           #mise en fonction de la fonction changeColor()
        button.draw(screen)            #crée le bouton

        if button.is_clicked():        #test si le bouton a été cliqué
            print("Le bouton a été cliqué")    #renvoie ; remplacer avec l'ouverture du jeu 

        pygame.display.update()  

#appele la fonction (sinon l'accueil n'apparaît jamais)
accueil()

#appele a pygame quit pour arreter le jeu 
pygame.quit()


