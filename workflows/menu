import pygame
from button2 import Button     #importation du class bouton(le bouton)
from main_game3 import game_loop   #import de game_loop (le jeu)

pygame.init()

#######

#mise en forme du jeu

#######

longueur, largeur = 800, 600
pygame.display.set_caption("Oratosh's world")
screen = pygame.display.set_mode((longueur, largeur))
background = pygame.image.load("Background.png").convert()
background = pygame.transform.scale(background, (800, 600))


########
                            
#mise en place du background
                            
########



#mise en place de class bouton 
button_surface = pygame.image.load("bouton_play.png")
button_surface = pygame.transform.scale(button_surface, (400, 400))
button = Button(button_surface, 400, 500, "PLAY")  


#####################

# Menu du jeu

######################

def accueil():
    running = True
    while running:
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                running = False

        
        screen.fill((0,0,0))           #écran noir
        screen.blit(background, (0, 0))
        button.changeColor()           #mise en fonction de la fonction changeColor()
        button.draw(screen)            #crée le bouton

        if button.is_clicked():        #test si le bouton a été cliqué
            print("Le bouton a été cliqué")    #renvoie ; remplacer avec l'ouverture du jeu
            new_image = pygame.image.load("bouton_clique.png")
            new_image = pygame.transform.scale(new_image, (400, 400))
            button.set_image(new_image)
            
            #usage de la fonction game_loop
            
            game_loop()    
            
        pygame.display.update()  

#appele la fonction (sinon l'accueil n'apparaît jamais)
accueil()

#appele a pygame quit pour arreter le jeu 
pygame.quit()


#########

#Fin du programme

#########
